                    android:id="@+id/count_task_pending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="0 Pending"
                    android:textColor="#FA3C00"
                    android:textSize="20sp" />

