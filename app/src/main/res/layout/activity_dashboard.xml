            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#fff"
            android:elevation="10dp"
            android:padding="10dp"
            app:cardCornerRadius="10dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
